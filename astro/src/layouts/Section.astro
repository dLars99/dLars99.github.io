---
import { css } from "../../styled-system/css";

interface Props {
  id?: string;
}

const { id } = Astro.props;

const styles = {
  height: "100%",
  minHeight: "100vh",
  position: "relative",
  paddingTop: "1rem",
  paddingLeft: [0, "1rem"],
  width: "100vw",
};
---

<section class={css(styles)} id={id}>
  <slot />
</section>
