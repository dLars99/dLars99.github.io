---
import type { GetStaticPaths } from "astro";
import "@fontsource/nunito-sans";
import "../../index.css";
import { css } from "../../../styled-system/css";
import { RrtDemo } from "../../components/RrtDemo";
import { routerConfig } from "../../components/RrtDemo/DemoTabs";

export const getStaticPaths = (() => {
  const tabRoutes = routerConfig.map((route) => route.route);
  return tabRoutes.map((tabRoute) => ({ params: { tab: tabRoute } }));
}) satisfies GetStaticPaths;

const styles = {
  bg: "black",
  color: "white",
  height: "100vh",
  width: "100vw",
  overflow: "hidden",
};
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>react-routing-tabs Demo</title>
  </head>
  <body>
    <main class={css(styles)}>
      <div class={css({ mx: "auto" })}>
        <RrtDemo client:only />
      </div>
    </main>
  </body>
</html>
