---
import { css } from "../../../../styled-system/css";
import ProjectLinks, {
  type ProjectLink,
} from "../ProjectLinks/ProjectLinks.astro";
import PortfolioDescription from "./PortfolioDescription.astro";

const barkeepLinks: ProjectLink[] = [
  {
    name: "Barkeep Backend",
    url: "https://github.com/dLars99/barkeep",
    type: "github",
  },
  {
    name: "Barkeep Frontend",
    url: "https://github.com/dLars99/barkeep-frontend",
    type: "github",
  },
];

const styles = {
  display: "grid",
  gridTemplateColumns: [1, 2],
};
---

<div>
  <ProjectLinks links={barkeepLinks} />

  <div class={css(styles)}>
    <PortfolioDescription />

    <div>Screenshots</div>
  </div>
</div>
